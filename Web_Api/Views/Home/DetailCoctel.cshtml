<!-- Modal -->
@model Web_Api.Objet.DrinksObj
<div class="modal fade" id="detailCoctelModal" tabindex="-1" role="dialog" aria-labelledby="detailCoctelModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="exampleModalLabel">@Model.drinks.FirstOrDefault().strDrink</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-6" style="margin-left: 150px;">
                        <img src="@Model.drinks.FirstOrDefault().strDrinkThumb" style="width:50% !important; height:70% !important;" />
                    </div>
                    <div class="col-6" style="margin-left: 150px;">
                        <h4>Categoria</h4>
                        <ul>
                            <li>@Model.drinks.FirstOrDefault().strCategory</li>
                        </ul>
                        <h4>Ingredientes</h4>
                        <ul>
                            <li>@Model.drinks.FirstOrDefault().strCategory</li>

                            <li>@Model.drinks.FirstOrDefault().strIngredient1</li>
                            <li>@Model.drinks.FirstOrDefault().strIngredient2</li>
                            <li>@Model.drinks.FirstOrDefault().strIngredient3</li>
                        </ul>
                    </div>
                </div>
                <div class="modal-footer">                    
                    <button class="btn btn-warning" onclick="storage('@Model.drinks.FirstOrDefault().strDrink', @Model.drinks.FirstOrDefault().idDrink)">
                        <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                        Favoritos
                    </button>                    
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
